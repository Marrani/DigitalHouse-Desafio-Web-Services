<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="493dp"
    android:background="#00162C"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    tools:context=".register.view.RegisterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeColor="#C0CCDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Name"
            android:textColorHint="#EA2427"
            app:boxBackgroundColor="#1F2D3D"
            app:hintTextColor="#EA2427">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNomeRegister"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#1F2D3D" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeColor="#C0CCDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#EA2427"
            app:boxBackgroundColor="#1F2D3D"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:background="@android:color/transparent"
                android:id="@+id/txtEmailRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#1F2D3D" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeColor="#C0CCDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:textColorHint="#EA2427"
            app:boxBackgroundColor="#1F2D3D"
            app:hintTextColor="#EA2427">

            <com.google.android.material.textfield.TextInputEditText
                android:background="@android:color/transparent"
                android:id="@+id/txtSenhaRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#1F2D3D" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:backgroundTint="#EA2427"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cornerRadius="3dp"
            android:height="54dp"
            android:text="SAVE"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>